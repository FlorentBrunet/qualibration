<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<SplitPane fx:id="rootPane" dividerPositions="0.25, 0.75" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox spacing="4.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onAddImageClicked" text="Add" />
                  <Button mnemonicParsing="false" onAction="#onRemoveImageClicked" text="Remove" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <ListView fx:id="imagesListView" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </ListView>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <HBox spacing="4.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onZoomOutClicked" prefWidth="26.0" text="-" />
                  <Button mnemonicParsing="false" onAction="#onZoomInClicked" prefWidth="26.0" text="+" />
               </children>
               <padding>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </padding>
            </HBox>
            <Pane fx:id="pane" VBox.vgrow="ALWAYS">
               <children>
                  <Canvas fx:id="canvas" height="200.0" width="200.0" />
               </children>
            </Pane>
         </children>
      </VBox>
      <VBox minWidth="150.0">
         <children>
            <Label text="Number of rows" />
            <Spinner fx:id="rowsCountSpinner" editable="true" maxWidth="1.7976931348623157E308" />
            <Label text="Number of columns">
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </Label>
            <Spinner fx:id="columnsCountSpinner" maxWidth="1.7976931348623157E308" />
            <Label text="Square size (mm)">
               <VBox.margin>
                  <Insets top="4.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="squareSizeEditText" maxWidth="1.7976931348623157E308" text="30" />
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </VBox>
   </items>
</SplitPane>
